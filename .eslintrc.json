{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "import"
    ],
    "rules": {
        "indent": [
            1,
            4
        ],
        "linebreak-style": [
            1,
            "windows"
        ],
        "quotes": [
            1,
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            1,
            "always"
        ],
        "max-len": [
            1,
            {
                "code": 100
            }
        ],
        "import/no-unused-modules": [
            1,
            {
                "unusedExports": true
            }
        ]
    }
}